{
  "NLog": {
    "targets": {
      "console": {
        "type": "ColoredConsole"
      },
      "file": {
        "type": "file",
        "fileName": "log/DisplayController.log",
        "archiveFileName": "DisplayController-{#}.log",
        "archiveNumbering": "Date",
        "archiveEvery": "Day",
        "archiveDateFormat": "yyyyMMdd"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "console, file"
      }

    ]
  }
}